<link href="https://getbootstrap.com/docs/5.1/examples/sign-in/signin.css" rel="stylesheet">

<script>
  $(() => {
    const DELAY = 5000;
    var time = 5;
    $('#logoutBtn').click(() => {
      $('#timer').html(String('You will be redirected to the login page in ' + time + ' seconds.'));
      setTimeout(() => { $(window).attr('location', 'login') }, DELAY);
    });
  })
</script>

<main class="form-signin text-center">
  <form>
    <img class="mb-4" src="../srcs/favicon.ico" alt="" width="72" height="72">
    <h1 class="h3 mb-3 fw-normal">Logging Out</h1>
    <p>Are you sure you want to log out of your account?</p>
    <br>
    <a class="w-100 btn btn-lg btn-warning" data-bs-toggle="modal" href="#exampleModalToggle" role="button" id="logoutBtn">Yes, Logout.</a>
  </form>

  <div class="modal fade" id="exampleModalToggle" aria-hidden="true" aria-labelledby="exampleModalToggleLabel"
    tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalToggleLabel">Logged out</h5>
          <a role="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></a>
        </div>
        <div class="modal-body">
          <p>You are now logged out of your account. <span id='timer'></span></p>
        </div>
        <div class="modal-footer">
          <a role="button" class="btn btn-success" data-bs-dismiss="modal" aria-label="Close">Okay, got it!</a>
        </div>
      </div>

</main>