<link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script defer src="../js/login.js"></script>

<style>
	.bd-placeholder-img {
		font-size: 1.125rem;
		text-anchor: middle;
		-webkit-user-select: none;
		-moz-user-select: none;
		user-select: none;
	}

	@media (min-width: 768px) {
		.bd-placeholder-img-lg {
			font-size: 3.5rem;
		}
	}
</style>

<link href="https://getbootstrap.com/docs/5.1/examples/sign-in/signin.css" rel="stylesheet">

<main class="form-signin text-center" method="post">
	<form id="login">
		<img class="mb-4" src="../srcs/favicon.ico" alt="" width="72" height="72">
		<h1 class="h3 mb-3 fw-normal">Family Application</h1>
		<p>Please sign in your account:</p>

		<div class="form-floating">
			<input type="text" class="form-control form_info" name="tUname" id="tName" placeholder="Username">
			<label for="tUname">Username</label>
		</div>
		<div class="form-floating">
			<input type="password" class="form-control form_info" name="pWord" id="pPassword" placeholder="Password">
			<label for="pWord">Password</label>
		</div>
		<br>
		<a href="recoverAcc">Forgot Password?</a>
		<br>
		<a href="register">Don't have an account yet?</a>
		<br><br>

		<button class="w-100 btn btn-lg btn-primary" type="submit">Login</button>
	</form>
</main>