<link href="https://getbootstrap.com/docs/5.1/dist/css/bootstrap.min.css" rel="stylesheet">
<script defer src="../js/register.js"></script>

<style>
	.bd-placeholder-img {
		font-size: 1.125rem;
		text-anchor: middle;
		-webkit-user-select: none;
		-moz-user-select: none;
		user-select: none;
	}

	@media (min-width: 768px) {
		.bd-placeholder-img-lg {
			font-size: 3.5rem;
		}
	}
</style>

<link href="https://getbootstrap.com/docs/5.1/examples/sign-in/signin.css" rel="stylesheet">

<main class="form-signin text-center" method="post" action="/submit-user">
	<form id="login">
		<img class="mb-4" src="../srcs/favicon.ico" alt="" width="72" height="72">
		<h1 class="h3 mb-3 fw-normal">Family Application</h1>
		<p>Please provide the information needed to set up your account:</p>

		<div class="form-floating">
			<input type="text" class="form-control form_info" name="uName" id="userName" placeholder="Enter Username">
			<label for="userName">Username</label>
		</div>
		<div class="form-floating">
			<input type="password" class="form-control form_info" name="pWord" id="passWord" placeholder="passWord">
			<label for="passWord">Password</label>
		</div>
		<div class="form-floating">
			<input type="password" class="form-control form_info" name="confirmPassWord" id="confirmPW" placeholder="Confirm Password">
			<label for="confirmPW">Confirm Password</label>
		</div>
		<div class="form-floating">
			<input type="eMail" class="form-control form_info" name="eMail" id="eMail" placeholder="Enter E-mail Address">
			<label for="eMail">E-mail Address</label>
		</div>
		<br>
		<a href="login">Already have an account?</a>
		<br><br>

		<button class="w-100 btn btn-lg btn-primary" type="submit">Register Account</button>
	</form>
</main>